generator client {
  provider = "prisma-client-js"
}

enum OrderStatus {
  Processing
  Delivered
  Cancelled
}

enum ProductCategory {
  Poultry
  Dairy
  Cereals
  Vegetables
  Fruits
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Retailer {
  id                  String          @id @default(uuid()) @map("_id")
  name                String
  email               String          @unique
  password            String
  profileImage        String
  products            Product[]
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  deletedAt           DateTime?
}

model Admin {
  id                  String          @id @default(uuid()) @map("_id")
  name                String
  email               String          @unique
  password            String
  profileImage        String
  role                String          @default("admin")
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  deletedAt           DateTime?
}

model Product {
  id                String            @id @default(uuid()) @map("_id")
  name              String
  price             Float
  availability      Boolean // in stock or out of stock
  description       String
  image             String
  category          ProductCategory
  retailerId        String
  retailer          Retailer          @relation(fields: [retailerId], references: [id])
  orders            Order[]
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  deletedAt         DateTime?
}

model Order {
  id              String              @id @default(uuid()) @map("_id")
  productId       String
  clientName      String
  phoneNumber     String
  email           String
  address         String
  status          OrderStatus         @default(Processing)
  product         Product              @relation(fields: [productId], references: [id]) // Relates to the product object
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  deletedAt       DateTime?
}
